body
    color #333
    background #333
    padding 0
    margin 0
    font-size 14px
    line-height 2em

h1
    font-weight normal

a, a:visited
    color blue

header
main
footer
    padding 0 1em

header
    background #000

    > h1
        margin 0
        color #f6f6f6
        font-size 1.5em
        line-height 3em
        font-weight normal
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

        > a, >a:visited
            color inherit
            text-decoration none

main
    padding-top 1em
    padding-bottom 1em
    background #f5f5f5

    h2
        font-size 1em
        font-weight normal

pre
    margin 0
    padding 1em
    border 1px #ddd solid
    background #fff
    overflow-x auto


main nav > ul
    padding 0
    list-style none


input[type=submit]
main nav a
main nav a:visited
    display inline-block
    padding 0 1em
    line-height 3em
    color #fff
    text-decoration none
    font-size 1em
    border 0
    border-radius 0.3em
    background #338fcc
    cursor pointer


footer
    background #333


@media screen and (min-width: 1000px)
    header
    main
    footer
        padding-right 10%
        padding-left 10%
